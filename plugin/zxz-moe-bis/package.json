{
  "name": "zxz-moe-bis",
  "publisher": "zxz-moe",
  "icon": "icon.png",
  "displayName": "bis",
  "description": "Plugin for developing iOS project using bazel rule",
  "repository": {
    "type": "git",
    "url": "https://github.com/xinzhengzhang/bis"
  },
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:WORKSPACE"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zxz-moe-bis.generateLaunchJson",
        "title": "bis: Generate bis launch json"
      }
    ],
    "configuration": [
      {
        "title": "Bis",
        "properties": {
          "bis.auto_generate_launch_json": {
            "type": "boolean",
            "markdownDescription": "Generate launch.json automaticaly",
            "order": 1,
            "default": false
          },
          "bis.prebuild_swift_when_indexing": {
            "type": "boolean",
            "markdownDescription": "Prebuild swift module when indexing",
            "order": 2,
            "default": true
          },
          "bis.simulator_cpu_string": {
            "type": "string",
            "markdownDescription": "CPU string of simulator",
            "order": 3,
            "default": "ios_x86_64"
          },
          "bis.bazel_background_output_base": {
            "type": "string",
            "markdownDescription": "Temporary output_base when building (This option may affect the symbol link of bazel-out for debuging. Set to '' to disable background indexing)",
            "order": 4,
            "default": "/tmp/.bis_cache"
          },
          "bis.pre_launch_task_name": {
            "type": "string",
            "markdownDescription": "Pre launch task name before build",
            "order": 5,
            "default": "bis.build: build"
          },
          "bis.build_options": {
            "type": "string",
            "markdownDescription": "Build options append on bazel build commands",
            "order": 6,
            "default": ""
          },
          "bis.compile_commands_rolling_size": {
            "type": "integer",
            "markdownDescription": "Rolling size of compile_commands.json",
            "order": 7,
            "default": "300000000"
          }
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "bis.build",
        "required": ["target"],
        "properties": {
          "target": {
            "type": "string",
            "description": "Build label"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "extensionDependencies": [
    "nisargjhaveri.ios-debug",
    "sswg.swift-lang"
  ],
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  }
}
